if filereadable($HOME . ".tags")
  set tags=./tags;
endif
map <C-N> :cn<CR>
map <Leader>e :e <C-R>=expand("%:p:h") . '/'<CR>
map <Leader>v :vnew <C-R>=expand("%:p:h") . '/'<CR>

nnoremap <Leader>g :!rake test:Led<CR>

" bind b to 'brew' coffee-script
nnoremap <Leader>b :w<CR>:CoffeeRun<CR>

" bind K to grep word under cursor
nnoremap K :grep! "\b<C-R><C-W>\b"<CR>:cw<CR>

let g:rails_gem_projections = {'draper': { 'app/decorators/*.rb': { 'command': 'decorator' }}}
